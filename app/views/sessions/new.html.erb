<div class="container">

  <%= form_for @session, url: login_path, html: { class: 'form-signin' } do |f| %>
      <h2 class="form-signin-heading">Please sign in</h2>
      <%= f.label :user_name, 'User name / email', class: 'sr-only' %>
      <%= f.text_field :user_name, class: 'form-control', placeholder: 'Username / email' %>

      <%= f.label :password, class: 'sr-only' %>
      <%= f.password_field :password, class: 'form-control', placeholder: 'Password' %>
<div class="form-group">
  <%= f.submit 'Login', class: '"btn btn-sm btn-primary btn-block' %>
</div>


  <% end %>
</div>
