<h1>Editing Teacher</h1>

<%= form_for(@teacher ,:url => { :action => 'update' }, :html => { :method => :put}) do |f| %>
    <% if @teacher.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@teacher.errors.count, "error") %> prohibited this teacher from being saved:</h2>

          <ul>
            <% @teacher.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <%= f.label :code %><br>
      <%= f.text_field :code %>
    </div>
    <div class="field">
      <%= f.label :identification %><br>
      <%= f.text_field :identification %>
    </div>
    <div class="field">
      <%= f.label :full_name %><br>
      <%= f.text_field :full_name %>
    </div>
    <div class="field">
      <%= f.label :date_of_birth %><br>
      <%= f.date_select :date_of_birth, :start_year => Date.current.year, :end_year => 1920 %>
    </div>
    <div class="field">
      <%= f.label :email %><br>
      <%= f.text_field :email %>
    </div>
    <div class="field">
      <%= f.label :office %><br>
      <%= f.number_field :office %>
    </div>
    <div class="field">
      <%= f.label :phone_number %><br>
      <%= f.number_field :phone_number %>
    </div>
    <div class="field">
      <%= f.label :amount_hour %><br>
      <%= f.text_field :amount_hour %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>


<%= link_to 'Show', teacher_path(@teacher.id) %> |
