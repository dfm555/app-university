<p id="notice"><%= notice %></p>

<h1>Listing Subjects</h1>

<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <th>Code</th>
      <th>Name</th>
      <th>Credits</th>
      <th>Cycle</th>
      <th>Room</th>
      <th>Description</th>
      <th>Hours</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @subjects.each do |subject| %>
      <tr>
        <td><%= subject.code %></td>
        <td><%= subject.name %></td>
        <td><%= subject.credits %></td>
        <td><%= subject.cycle %></td>
        <td><%= subject.room %></td>
        <td><%= subject.description %></td>
        <td><%= subject.hours %></td>
        <td><%= link_to 'Show', subject_path(subject.id) %></td>
        <td><%= link_to 'Edit', edit_subject_path(subject.id) %></td>
        <td><%= link_to 'Destroy', subject_path(subject.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

